         <image>
            <Image url="@../images/statistics.png" />
         </image>
      </ImageView>
      <ImageView fx:id="settingsBtn" onMouseClicked="#changeToSettings" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3">
